{
  "name": "colors",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "dev:desktop": "turbo run dev --filter=@colors/desktop",
    "dev:mobile": "turbo run dev --filter=@colors/mobile",
    "build": "turbo run build",
    "build:desktop": "turbo run build --filter=@colors/desktop",
    "build:mobile": "turbo run build --filter=@colors/mobile",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "check": "turbo run check",
    "test": "turbo run test",
    "clean": "turbo run clean && rimraf node_modules"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "rimraf": "^6.0.1",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
